{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@render/*": ["src/render/*"],
      "@parsers/*": ["src/parsers/*"],
      "@audio/*": ["src/audio/*"],
      "@ecs/*": ["src/ecs/*"],
      "@modding/*": ["src/modding/*"]
    }
  },
  "include": ["src", "tools"],
  "exclude": ["node_modules", "dist"]
}
